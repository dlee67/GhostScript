% Set the font for each time when texts are displayed.
/MainFont
/Helvetica-Bold findfont 15 scalefont def

% Display my name, for the specification for this homework.
/MyName
{
	moveto
	MainFont setfont
	(Dong(Bob) Lee)
	0 0 0 setrgbcolor
	closepath
	show
}def

% Display the triangle, which will be dangling at the end of the line, where the lines are sprouting from the control.
/Arrow
{
	newpath
	344.7 456 moveto
	5 -5 rlineto
	5 5 rlineto
	fill
	closepath
	stroke
}def

% Pre-made displays of boxes.
/Cell
{newpath
	50 0 rlineto
	0 50 rlineto
	-50 0 rlineto
	0 0 0 setrgbcolor
	2 setlinewidth
	closepath
	stroke
}def

% A display of box, which should hold a string "Head."
/ControlBox
{newpath 
	150 500 moveto
	100 0 rlineto 
	0 100 rlineto
	-100 0 rlineto
	0 0 0 setrgbcolor
	2 setlinewidth
	closepath
	stroke
}def

% A display of string "Head," which should appear in control box.
/ControlName
{
	moveto 
	MainFont
	setfont
	(Head)
	0 0 0 setrgbcolor
	closepath
	show
}def

% Some arrows sprouting from the control box, which should be heading directly to the right of the control box.
/ControlArrowRight
{newpath
	250 550 moveto
	100 0 rlineto
	0 0 0 setrgbcolor
	2 setlinewidth
	closepath
	stroke
}def

% Some arrows sprouting from the control box, which should be heading directly to the down of the control box. 
/ControlArrowDown
{newpath 
	350 550 moveto
	0 -100 rlineto
	0 0 0 setrgbcolor
	2 setlinewidth
	closepath
	stroke
}def

% A display of box, which should be at the farthest left among all the boxes.
/CellOne
{newpath
	325 400 moveto
	50 0 rlineto
	0 50 rlineto
	-50 0 rlineto
	0 0 0 setrgbcolor
	2 setlinewidth
	closepath
	gsave % In order to avoid border of the cells disappearing, gsave must be used.
		0 0 1 setrgbcolor
		fill
	grestore
	stroke
}def

% A display of string content, which should be displayed in the CellOne, with the string "1."
/CellOneContent
{
	moveto 
	MainFont
	setfont
	(1)
	0 0 0 setrgbcolor
	closepath
	show
}def

